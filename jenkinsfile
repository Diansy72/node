pipeline {
    agent any
    tools {
        nodejs 'NodeJS 22.13.1' // Sesuaikan dengan konfigurasi Node.js
    }
    stages {
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM', branches: [[name: 'main']],
                    doGenerateSubmoduleConfigurations: false, 
                    extensions: [[$class: 'CloneOption', depth: 1, noTags: false, shallow: true]], 
                    userRemoteConfigs: [[url: 'https://github.com/Diansy72/node.git']]
                ])
            }
        }
        stage('Select Random Files') {
            steps {
                script {
                    def randomScript = '''
                        const fs = require('fs');
                        const path = require('path');

                        const directory = '.'; // Direktori root repository
                        const files = fs.readdirSync(directory).filter(file => fs.lstatSync(path.join(directory, file)).isFile());
                        const randomFiles = files.sort(() => Math.random() - Math.random()).slice(0, 5); // Pilih 5 file secara acak
                        console.log("Randomly selected files:", randomFiles);
                    '''
                    writeFile file: 'select-random.js', text: randomScript
                    bat 'node select-random.js'
                }
            }
        }
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        stage('Run Tests') {
            steps {
                bat 'npm test'
            }
            post {
                success {
                    junit 'test-results.xml'
                }
                failure {
                    echo 'Tests failed!'
                }
            }
        }
        stage('Build') {
            steps {
                bat 'npm run build'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying to production environment...'
            }
        }
    }
    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
